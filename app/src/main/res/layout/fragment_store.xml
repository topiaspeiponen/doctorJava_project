<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreFragment">

    <Button
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="180dp"
        android:text="Info"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.664"
        tools:layout_conversion_wrapHeight="168"
        tools:layout_conversion_wrapWidth="308" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="289dp"
        android:layout_height="285dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="8dp"
        android:text="This is a tutorial for the apps main page. Price means buildings price. Bought is the amount of the same buildings that you have bought.Total is for gaining the money. Multiplier multiplies the gain of the next building(indicated by arrows).Black feet icon is for steps. Coin icon is for money. White feet icon is for unprocessed steps. Steptest button is for testing purposes, while user is not walking.Reset button is for restaring the values. "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_wrapHeight="420"
        tools:layout_conversion_wrapWidth="487" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="71dp" />

</androidx.constraintlayout.widget.ConstraintLayout>